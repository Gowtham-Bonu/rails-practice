<%= form_with model: faculty do |form| %>
<div class="card container" >
  <div class="card-body" >
     <div class="mb-3" >
        <%= form.label :first_name, {class: "form-label"} %><br>
        <%= form.text_field :first_name, {class: "form-control", placeholder: "First Name"}  %>
        <% faculty.errors.full_messages_for(:first_name).each do |message| %>
           <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3" >
        <%= form.label :last_name, {class: "form-label"} %><br>
        <%= form.text_field :last_name, {class: "form-control", placeholder: "Last Name"}  %>
        <% faculty.errors.full_messages_for(:last_name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3" >
        <%= form.label :phone_number, {class: "form-label"} %><br>
        <%= form.number_field :phone_number, {class: "form-control", placeholder: "Phone Number"}  %>
        <% faculty.errors.full_messages_for(:phone_number).each do |message| %>
           <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3" >
        <%= form.label :email_id, {class: "form-label"} %><br>
        <%= form.email_field :email_id, {class: "form-control", placeholder: "email_id"}  %>
        <% faculty.errors.full_messages_for(:email_id).each do |message| %>
           <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3" >
        <%= form.label :dob, {class: "form-label"} %><br>
        <%= form.date_field :dob, {class: "form-control", placeholder: "dob"}  %>
        <% faculty.errors.full_messages_for(:dob).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3" >
         <%= form.label :designation, {class: "form-label"} %><br>
         <%= form.text_field :designation, {class: "form-control", placeholder: "designation"}  %>
         <% faculty.errors.full_messages_for(:designation).each do |message| %>
           <div><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.submit %>
        </div>
     </div>
  </div>
<% end %>