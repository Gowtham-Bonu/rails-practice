<button type="button" class="btn btn-dark "><%= link_to "New Faculty", new_faculty_path %></button>
<table class="table table-dark table-striped" >
  <tr>
    <th>first name</th>
    <th>last name</th>
    <th>phone_number</th>
    <th>author email</th>
    <th>dob</th>
    <th>designation</th>
    <th>actions</th>
  </tr>
  <% @faculties.each do |faculty| %>
    <tr>
      <td><%= faculty.first_name %></td>
      <td><%= faculty.last_name %></td>
      <td><%= faculty.phone_number %></td>
      <td><%= faculty.email_id %></td>
      <td><%= faculty.dob %></td>
      <td><%= faculty.designation %></td>
      <td><div><button class="edit"  ><%= link_to "edit", edit_faculty_path(faculty) %></button><button class="delete"><%= link_to "Destroy", faculty_path(faculty), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button></div></td>
    </tr>
  <% end %>
</table>
<button type="button" class="btn btn-dark "><%= link_to "Back to college", college_index_path %></button>


